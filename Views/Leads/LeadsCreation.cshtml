<script>
    $(document).ready(function () {
        const selectedValues = {};
        $('.dropdown-menu a').on('click', function () {
            const dropdownButton = $(this).closest('.dropdown').find('button');
            dropdownButton.text($(this).text());
            dropdownButton.data('selected-value', $(this).data('value'));
            selectedValues[dropdownButton.attr('id')] = $(this).text(); 
            console.log(`Selected ${dropdownButton.attr('id')}: ${$(this).text()}`);
        });
        $('#saveButton').on('click', function () {
            // Create an object to store form data
            const formData = {
                CompanyName: $('#CompanyName').val(),
                FirstName: $('#FirstName').val(),
                LastName: $('#LastName').val(),
                ProjectName: $('#ProjectName').val(),
                PhoneHome: $('#Home').val(),
                PhoneCell:$('#Cell').val(),
                PhoneWork:$('#Work').val(),
                Email:$('#Email').val(),
                Website:$('#Website').val(),
                Address1:$('#Address1').val(),
                Address2:$('#Address2').val(),
                City:$('#City').val(),
                State:$('#State').val(),
                Zip: $('#Zip').val(),
                SelectedValues: {},
                UserId: 1,
                CustomerId: 1
            };

            // API endpoint URL
            const apiUrl = 'https://localhost:44367/api/Opportunities';

            // Ajax request to the API
            $.ajax({
                url: apiUrl,
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (data) {
                    console.log('Opportunity created successfully:', data);
                    window.location.href = '@Url.Action("Index", "Home")';

                    // Add any further handling here
                },
                error: function (xhr, textStatus, errorThrown) {
                    console.error('Error creating opportunity:', errorThrown);
                    xhr.text().then(errorMessage => {
                        console.log('Error message:', errorMessage);
                    });
                }
            });

        });
    });
</script>

