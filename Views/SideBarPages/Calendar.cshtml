<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='utf-8' />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                events: function (fetchInfo, successCallback, failureCallback) {
                    $.ajax({
                        url: 'https://localhost:44367/api/Calendar/GetCalendarEvents',
                        type: 'GET',
                        dataType: 'json',
                        success: function (events) {
                            // Convert start and end times to full date-time format
                            events.forEach(function (event) {
                                event.start = new Date('2000-01-01 ' + event.StartTime);
                                event.end = new Date('2000-01-01 ' + event.EndTime);
                            });

                            successCallback(events);
                        },
                        error: function (error) {
                            console.error('Error fetching events:', error);
                            failureCallback(error);
                        }
                    });
                },
                dateClick: function (info) {
                    var clickedDate = info.date;
                    var eventsOnDate = calendar.getEvents().filter(function (event) {
                        return event.start.toDateString() === clickedDate.toDateString();
                    });

                    if (eventsOnDate.length > 0) {
                        eventsOnDate.forEach(function (event) {
                            console.log('Date: ' + clickedDate.toLocaleDateString() + ', Title: ' + event.title);
                        });
                    } else {
                        console.log('No events on ' + clickedDate.toLocaleDateString());
                    }
                }
            });

            calendar.render();
        });
    </script>
</head>
<body>
    <div id='calendar' class="p-2"></div>
</body>
</html>
