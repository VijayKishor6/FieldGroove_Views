<!DOCTYPE html>
<html lang='en'>
<head>
    <meta charset='utf-8' />  
    <style>
        .butmod{
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
      

    </style>
</head>
<body>
    <div class="row p-0 m-0">
        <div class="col-9 border">
            <div class="row p-3">               
                    <div class="row p-2 py-0 m-0 border">
                        <div class="col-6 d-flex p-0 m-0">
                            <div class="p-1 flex-grow-1">
                            <input type="search" class="form-control" />
                        </div>
                        <div class="vr  p-0 m-0 h-100 mx-1"></div>
                        </div>
                    <div class="col-4 d-flex p-0 m-0">
                        <div class="p-1 flex-grow-1">
                            <div class="dropdown">
                                <button class="btn btn-transparent border dropdown-toggle w-100 butmod" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Select a User
                                </button>
                                <ul class="dropdown-menu w-100">
                                    <li><input type="search" class="w-100"/></li>
                                    <li><a class="dropdown-item" href="#">Select a User</a></li>
                                    <li><a class="dropdown-item" href="#">Depigaa Madhan</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="vr  p-0 m-0 h-100 mx-1"></div>
                        </div>
                        <div class="col-2 p-1 m-0">
                            <button class="btn btn-info w-100">Filter</button>
                        </div>
                    </div>
            </div>
            <hr class="p-0 m-0"/>
            <div class="row p-3">
                <div class="d-flex justify-content-between">
                    <div>
                        <h1 class="">Task</h1>
                    </div>
                    <div>
                        <button class="btn btn-success">Add Task</button>
                    </div>
                </div>
            </div>
            <hr class="px-0 mx-0"/>
            <div class="row">
                <table id="leadsTable" class="table table-bordered border">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Project Name</th>
                            <th>Status</th>
                            <th>Date Created</th>
                            <th>Contact</th>
                            <th>Action</th>
                            <th>Assignee</th>
                            <th>Bid Date</th>
                            <th>operations</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <div class="modal fade" id="addTaskModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Add Task</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <!-- Add your form or content for adding a task here -->
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <!-- Add your submit button or other actions here -->
                        </div>
                    </div>
                </div>
            </div>


        </div>
        <div class="col-3">

        </div>

    </div>

</body>
<script>
    $(document).ready(function () {
        var dataTable = $('#leadsTable').DataTable({
            columns: [
                { data: 'CompanyName', defaultContent: '-' },
                { data: 'ProjectName', defaultContent: '-' },
                { data: 'Status', defaultContent: '-' },
                { data: 'DateCreated', defaultContent: '-' },
                { data: 'Phone', defaultContent: '-' },
                { data: 'Action', defaultContent: '-' },
                { data: 'Assignee', defaultContent: '-' },
                { data: 'BidDate', defaultContent: '-' },
                {
                    data: null,
                    render: function (data, type, row) {
                        return '<button class="btn" data-bs-toggle="modal" data-bs-target="#editLeadModal" data-id="' + row.Id + '"><i class="bi bi-download"></i></button>';
                    }
                }
            ]
        });
        function loadAllData() {
            $.ajax({
                url: 'https://localhost:44367/api/Opportunities/opp', 
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    dataTable.clear();
                    dataTable.rows.add(data).draw();
                },
                error: function (error) {
                    console.error('Error fetching data:', error);
                }
            });
        }
        $('.btn-success').on('click', function () {
            // Show the modal when the button is clicked
            $('#addTaskModal').modal('show');
        });
        loadAllData();
        $('input[type="search"]').on('keyup', function () {
            dataTable.search($(this).val()).draw();
        });
    });
</script>
</html>