@{
    ViewData["Title"] = "Leads";
}

<div class="row p-0 m-0 ">
    <div class="col-lg-9 col-12 p-0 m-0">
        <div class="d-flex flex-lg-row flex-column justify-content-between  bg-color border border-start-0 border-top-0 p-4">
            <div>
                <h3>
                    Leads-Archieved-Converted
                </h3>
            </div>
            <div>
                <button type="button" class="btn btn-warning"" onclick="window.location.href='@Url.Action("Index", "Home")' ;">View Un-Converted</button>
                <button type="button" class="btn btn-warning">View Un-Archieved</button>
                <button type="button" class="btn btn-success mt-3 mt-lg-0" data-bs-toggle="modal" data-bs-target="#addLeadModal">Add Lead</button>
            </div>
        </div>
        <div class="row p-3 m-0  border border-start-0 border-top-0">
            <div class="col-lg-4 col-12">
                <div class="border gap-2  bg-color p-3">
                    <input class="form-control mb-3  bg-color" type="search" placeholder="Search Leads..." aria-label="Search">
                    <select class="form-select mb-3" id="actionFilter" aria-label="Default select example">
                        <option selected>Select an action...</option>
                        <option value="Quote">Quote</option>
                        <option value="Follow Up">Follow Up</option>
                    </select>
                    <select class="form-select mb-3"  id="statusFilter" aria-label="Default select example">
                        <option selected>Select a status...</option>
                        <option value="Contacted">Contacted</option>
                        <option value="Estimate Request">Estimate Request</option>
                    </select>
                    <select class="form-select mb-3" aria-label="Default select example">
                        <option selected>Select a salesperson...</option>
                        <option value="Vijaykishor">Vijaykishor</option>
                    </select>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" value="Expired" id="flexCheckDefault">
                        <label class="form-check-label" for="flexCheckDefault">
                            Expired
                        </label>
                    </div>
                    <div class="d-flex justify-content-evenly p-0 m-0">
                        <button type="button" class="btn btn-secondary text-black badge border-0 px-3" id="exportLeads">
                            <span class="text-black"><iconify-icon icon="ph:download-fill"></iconify-icon></span>&nbsp;Export
                        </button>
                        <button type="button" class="btn btn-primary px-3" id="filterLeads">Filter</button>
                    </div>
                </div>
            </div>
            <div class="col-8 d-lg-block d-none border p-0 m-0">
            </div>
            <div class="pe-0 mt-3 m-0">
                <div class="d-flex text-center border ps-3 ">
                    <div class="col-6  border d-flex align-items-center justify-content-center bg-color p-2">
                        <p class="mb-0 text-secondary"><span class="badge text-white">1</span>&nbsp;Consumer</p>
                    </div>
                    <div class="col-6  border d-flex align-items-center justify-content-center bg-color p-2">
                        <p class="mb-0 text-secondary"><span class="badge text-white">11</span>&nbsp;Business</p>
                    </div>
                </div>
            </div>
            <div class="pe-0 mt-3 m-0">
                <div class="d-flex text-center border ps-3">
                    <div class="col-4  border d-flex align-items-center justify-content-center bg-color p-2">
                        <p class="mb-0 text-secondary"><span class="badge text-white">1</span>&nbsp;Consumer</p>
                    </div>
                    <div class="col-4  border d-flex align-items-center justify-content-center bg-color p-2">
                        <p class="mb-0 text-secondary"><span class="badge text-white">11</span>&nbsp;Business</p>
                    </div>
                    <div class="col-4 border d-flex align-items-center justify-content-center bg-color p-2">
                        <p class="mb-0 text-secondary"><span class="badge text-white">11</span>&nbsp;Business</p>
                    </div>
                </div>
            </div>
            <div class="mt-3 p-3 ">
                @* table *@
                <table id="leadsTable" class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Project Name</th>
                            <th>Status</th>
                            <th>Date Created</th>
                            <th>Contact</th>
                            <th>Action</th>
                            <th>Assignee</th>
                            <th>Bid Date</th>
                            <th>operations</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="addLeadModal" tabindex="-1" aria-labelledby="addLeadModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addLeadModalLabel">Add Lead</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="editLeadModal" tabindex="-1" aria-labelledby="editLeadModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editLeadModalLabel">Edit Lead</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label for="editLeadName" class="form-label">Name</label>
                                <input type="text" class="form-control" id="editLeadName">
                            </div>
                            <div class="mb-3">
                                <label for="editLeadProjectName" class="form-label">ProjectName</label>
                                <input type="text" class="form-control" id="editLeadProjectName">
                            </div>
                            <div class="mb-3">
                                <label for="editLeadStatus" class="form-label">Status</label>
                                <input type="text" class="form-control" id="editLeadStatus">
                            </div>
                            <div class="mb-3">
                                <label for="editLeadAdded" class="form-label">Added</label>
                                <input type="text" class="form-control" id="editLeadAdded">
                            </div>
                            <div class="mb-3">
                                <label for="editLeadType" class="form-label">Type</label>
                                <input type="text" class="form-control" id="editLeadType">
                            </div>
                            <div class="mb-3">
                                <label for="editLeadContact" class="form-label">LeadContact</label>
                                <input type="text" class="form-control" id="editLeadContact">
                            </div>
                            <div class="mb-3">
                                <label for="editLeadAction" class="form-label">Action</label>
                                <input type="text" class="form-control" id="editLeadAction">
                            </div>
                            <div class="mb-3">
                                <label for="editLeadAssignee" class="form-label">Assignee</label>
                                <input type="text" class="form-control" id="editLeadAssignee">
                            </div>
                            <div class="mb-3">
                                <label for="editLeadBidDate" class="form-label">BidDate</label>
                                <input type="text" class="form-control" id="editLeadBidDate">
                            </div>
                            <input type="hidden" id="editLeadId">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary" id="editLeadUpdate">Update</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>



    </div>

    <div class="col-3">
        <div id="toast-container" class="toast-container"></div>
    </div>
</div>
<script>
    $(document).ready(function () {
        // Initialize DataTable
        var dataTable = $('#leadsTable').DataTable({
            columns: [
                { data: 'CompanyName', defaultContent: '-' },
                { data: 'ProjectName', defaultContent: '-' },
                { data: 'Status', defaultContent: '-' },
                { data: 'DateCreated', defaultContent: '-' },
                { data: 'Phone', defaultContent: '-' },
                { data: 'Action', defaultContent: '-' },
                { data: 'Assignee', defaultContent: '-' },
                { data: 'BidDate', defaultContent: '-' },
                {
                    data: null,
                    render: function (data, type, row) {
                        // Add an Edit button for each row
                        return '<button class="btn" data-bs-toggle="modal" data-bs-target="#editLeadModal" data-id="' + row.Id + '"><i class="bi bi-download"></i></button>';
                    }
                }
            ]
        });
        function loadAllData() {
            // Fetch data using AJAX
            $.ajax({
                url: 'https://localhost:44367/api/Opportunities/opp', // Change the URL to your API endpoint
                method: 'GET',
                dataType: 'json',
                success: function (data) {
                    var filteredData = data.filter(function (item) {
                        return item.IsCustomer === 1 || item.IsCustomer === true;
                    });
                    // Clear existing rows
                    dataTable.clear();

                    // Add new rows based on the received data
                    dataTable.rows.add(filteredData).draw();
                },
                error: function (error) {
                    console.error('Error fetching data:', error);
                }
            });
        }
        function exportToCSV(data) {
            var csv = Papa.unparse(data);
            var blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            var link = document.createElement('a');
            link.href = window.URL.createObjectURL(blob);
            link.download = 'filtered_data.csv';

            // Append the link to the document and trigger the download
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
        function applyFilters() {
            var actionFilter = $('#actionFilter').val();
            var statusFilter = $('#statusFilter').val();

            $.ajax({
                url: 'https://localhost:44367/api/Opportunities/filtered',
                method: 'GET',
                dataType: 'json',
                data: {
                    action: actionFilter,
                    status: statusFilter
                },
                success: function (data) {
                    var filteredData = data.filter(function (item) {
                        return item.IsCustomer === 1 || item.IsCustomer === true;
                    });
                    dataTable.clear();
                    dataTable.rows.add(data).draw();
                },
                error: function (error) {
                    console.error('Error fetching filtered data:', error);
                }
            });
        }
        loadAllData();
        $('#filterLeads').on('click', function () {
            applyFilters();
        });
        $('#exportLeads').on('click', function () {
            var actionFilter = $('#actionFilter').val();
            var statusFilter = $('#statusFilter').val();

            $.ajax({
                url: 'https://localhost:44367/api/Opportunities/filtered',
                method: 'GET',
                dataType: 'json',
                data: {
                    action: actionFilter,
                    status: statusFilter
                },
                success: function (data) {
                    exportToCSV(data);
                },
                error: function (error) {
                    console.error('Error fetching filtered data:', error);
                }
            });
        });

        // Add DataTables search functionality to the search input
        $('input[type="search"]').on('keyup', function () {
            dataTable.search($(this).val()).draw();
        });
    });
</script>
